{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "declaration": true,
        "declarationDir": "dist/types"
    },
    "include": ["."],
    "exclude": ["dist", "node_modules"]
}
